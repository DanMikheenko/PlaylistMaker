<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.PlaylistMaker"
    android:orientation="vertical"
    tools:context=".presentation.ui.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="@dimen/top_bottom_button_margin"
        android:text="@string/app_name"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/button_name_text_size" />

    <Button
        android:id="@+id/search_button"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginTop="@dimen/top_bottom_button_margin"
        android:layout_marginBottom="@dimen/margin_between_buttons"
        android:text="@string/search_button_text"
        app:icon="@drawable/ic_search"
        style="@style/MainActivityButtonStyle"/>

    <Button
        android:id="@+id/media_button"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:layout_marginTop="@dimen/margin_between_buttons"
        android:layout_marginBottom="@dimen/margin_between_buttons"
        android:text="@string/media_button_text"
        app:icon="@drawable/ic_note"
        style="@style/MainActivityButtonStyle"/>

    <Button
        android:id="@+id/setting_button"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginTop="@dimen/margin_between_buttons"
        android:layout_marginBottom="@dimen/top_bottom_button_margin"
        android:text="@string/setting_button_text"
        app:icon="@drawable/ic_settings"
        style="@style/MainActivityButtonStyle"/>

</LinearLayout>