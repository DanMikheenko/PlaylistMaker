<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".media_library.ui.activity.FavoriteTracksFragment">
    <TextView
        android:id="@+id/addPlaylistButton"
        android:layout_marginTop="@dimen/setting_activity_button_padding_end"
        android:layout_width="@dimen/clear_history_button_width"
        android:layout_height="@dimen/clear_history_button_height"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center"
        android:text="@string/new_playlist_button_name"
        android:layout_gravity="center"
        android:textSize="@dimen/refresh_button_text_size"
        android:theme="@style/ButtonTheme" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:theme="@style/NothingFoundPlaceholderStyle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/setting_activity_button_padding_end"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/no_playlist_created"
        android:textSize="19sp"
        android:theme="@style/NothingFoundPlaceholderStyle" />

</LinearLayout>