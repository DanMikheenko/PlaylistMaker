<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:background">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="PlaylistMakerActivitySetting" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>


    <style name="PlaylistMakerActivitySearch">
        <!-- Customize your dark theme here. -->
        <item name="android:hint">@string/editTextHint</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="drawableStartCompat">@drawable/ic_magnifier_dark</item>
    </style>

    <style name="PlaylistMakerActivitySearchCancelBtn">
        <item name="android:src">@drawable/ic_cancel_btn_dark</item>
    </style>
    <style name="NothingFoundPlaceholderStyle">
        <item name="android:src">@drawable/nothing_found_placeholder_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ConnectionErrorPlaceHolderStyle">
        <item name="android:src">@drawable/connection_error_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ConnectionErrorUpdateButtonStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="background">@drawable/rounded_button_background_dark</item>
    </style>

    <style name="ButtonTheme">
        <!-- Other theme attributes -->
        <item name="android:textColor">@color/icon_color</item>
        <item name="android:background">@drawable/rounded_button_background_dark</item>
    </style>
    <style name="SearchHistoryTheme">
        <item name="android:background">@color/icon_color</item>
    </style>
    <style name="SearchHistoryHeaderTheme">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="backButtonPlayerTheme">
        <item name="android:drawableStart">@drawable/ic_arrow_dark_mode</item>
    </style>
    <style name="PlayerConstraintLayoutTheme">
        <item name="android:background">@color/icon_color</item>
    </style>
    <style name="PlayerTextViewTheme">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="GrayButtonTheme">
        <item name="colorButtonNormal">@color/icon_color</item>
    </style>
    <style name="PlayButtonTheme">
        <item name="android:background">@drawable/play_button_dark</item>
    </style>

    <style name="AddToPlaylistButtonTheme">
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="SearchActivityBackgroundStyle">
        <item name="android:background">@color/icon_color</item>
    </style>
    <style name="CustomTabLayout" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>


</resources>