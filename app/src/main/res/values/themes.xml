<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:background">@color/main_activity_background</item>
        <item name="android:statusBarColor">@color/main_activity_background</item>
    </style>

    <style name="PlaylistMakerActivitySetting" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">@color/main_activity_background</item>
    </style>

    <style name="PlaylistMakerActivitySearch">
        <item name="android:hint">@string/editTextHint</item>
        <item name="drawableStartCompat">@drawable/ic_magnifier_light</item>
    </style>
    <style name="PlaylistMakerActivitySearchCancelBtn">
        <item name="android:src">@drawable/ic_cancel_btn_light</item>
    </style>
    <style name="NothingFoundPlaceholderStyle">
        <item name="android:src">@drawable/nothing_found_placeholder_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ConnectionErrorPlaceHolderStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:src">@drawable/connection_error_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonTheme">
        <!-- Other theme attributes -->
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button_background_light</item>
    </style>
    <style name="SearchHistoryTheme">
        <item name="android:background">@color/white</item>
    </style>
    <style name="SearchHistoryHeaderTheme">
        <item name="android:textColor">@color/icon_color</item>
    </style>
    <style name="backButtonPlayerTheme">
        <item name="android:drawableStart">@drawable/ic_arrow</item>
    </style>
    <style name="PlayerConstraintLayoutTheme">
        <item name="android:background">@color/white</item>
    </style>
    <style name="PlayerTextViewTheme">
        <item name="android:textColor">@color/icon_color</item>
    </style>
    <style name="GrayButtonTheme">

    </style>
    <style name="TrackInfoHeaderTheme">
        <item name="android:textColor">#AEAFB4</item>
    </style>
    <style name="PlayButtonTheme">
        <item name="android:background">@drawable/play_button</item>
    </style>

    <style name="AddToPlaylistButtonTheme">
        <item name="android:background">@drawable/circle_button_background</item>
    </style>

    <style name="SearchActivityBackgroundStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here -->
        <item name="colorSwitchThumbNormal">@color/thumb_off_color</item>
        <item name="colorControlActivated">@color/thumb_on_color</item>
    </style>

    <style name="CustomTabLayout" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>



</resources>