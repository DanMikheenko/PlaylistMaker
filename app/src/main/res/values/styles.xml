<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/icon_color</item>
        <item name="android:textSize">@dimen/button_name_text_size</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconPadding">@dimen/icon_pudding</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingActivityTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_activity_button_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/setting_activity_button_padding_start</item>
        <item name="android:paddingEnd">@dimen/setting_activity_button_padding_end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/setting_activity_button_text_size</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SearchActivityStyle" parent="SettingActivityTextViewStyle">
        <item name="android:background">@drawable/edit_text_rounded_corners_light</item>
        <item name="android:textSize">@dimen/editTextSize</item>
        <item name="android:layout_height">@dimen/editTextLayoutHeight</item>
    </style>
    <style name="TrackTextViewStyle"/>

    <style name="Button.LightTheme" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button_background_light</item>
    </style>

    <style name="Button.DarkTheme" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/icon_color</item>
        <item name="android:background">@drawable/rounded_button_background_dark</item>
    </style>
</resources>